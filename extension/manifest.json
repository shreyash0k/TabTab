{
  "manifest_version": 3,
  "name": "TabTab - AI Text Autocomplete",
  "version": "1.0.0",
  "description": "GitHub Copilot-style AI autocomplete for any text field on any website",
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  
  "host_permissions": [
    "http://localhost:3000/*",
    "https://sxkhxjhpgfzsvkkcptjx.supabase.co/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/discord-extractor.js", "content/linkedin-extractor.js", "content/slack-extractor.js", "content/twitter-extractor.js", "content/content.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
